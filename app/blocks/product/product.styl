.product
	position relative
	font-family trebuchet
		
	&__input 
		position absolute
		z-index -1
		top 0
		left 0
		size 100%
		visibility hidden
		opacity 0

	&__container:hover
	&__input:focus + &__label &__container:hover 
		border-color $bright-blue
		
		&:before
			border-left-color $bright-blue

		&:after
			border-top-color $bright-blue
			border-right-color $bright-blue
			
		+below($responsiveTablet)
			border-color $vivid-blue

			&:before
				border-left-color $vivid-blue

			&:after
				border-top-color $vivid-blue
				border-right-color $vivid-blue

	&__container:hover &
	&__input:focus + &__label &__container:hover &
		&__weight
			background-color $bright-blue
		
			+below($responsiveTablet)
				background-color $vivid-blue

	&__container:hover + &__action-call &__buy-link
	&__input:focus + &__label &__container:hover + &__action-call &__buy-link
		color $bright-blue

		&:after
			border-bottom-color $bright-blue

		+below($responsiveTablet)
			color $vivid-blue

			&:after
				border-bottom-color $vivid-blue

	&__input:checked:focus + &__label &
	&__input:checked + &__label &
	&__input:checked:focus + &__label &__container:hover &	
		&__container
			border-color $vivid-pink
			
			&:before
				border-left-color $vivid-pink

			&:after
				border-top-color $vivid-pink
				border-right-color $vivid-pink

		&__weight
			background-color $vivid-pink

		&__buy-text
		&__buy-link
			display none

		&__no-approve
			visibility hidden
			opacity 0
			
		&__consist
			display block

		&__description
			visibility visible
			opacity 1

	&__input:checked:focus + &__label &__container:hover
		border-color $vivid-pink
			
		&:before
			border-left-color $vivid-pink

		&:after
			border-top-color $vivid-pink
			border-right-color $vivid-pink

	&__input:checked + &__label &__container:hover
		border-color $bright-pink

		&:before
			border-left-color $bright-pink

		&:after
			border-top-color $bright-pink
			border-right-color $bright-pink

	&__input:checked + &__label &__container:hover &
		&__weight
			background-color $bright-pink

		&__description
			visibility hidden
			opacity 0

		&__no-approve
			visibility visible
			opacity 1

			+below($responsiveTablet)
				visibility hidden
				opacity 0

	&__input[disabled] + &__label &

		&__container
			cursor default
			border-color $gray

			&:before
				border-left-color $gray

			&:after
				border-top 4px solid $gray
				border-right 4px solid $gray

		&__disabled
			position absolute
			top 0
			left 0
			display block
			size 100%
			content ''
			background-color $light-gray
			opacity .5
		
		&__weight
			background-color $gray

		&__description
		&__name
		&__additive
		&__portions
		&__present
		&__satisfied
			color $gray
			opacity .5
			
		&__buy-text
		&__buy-link
			display none

		&__no-more
			display block

	&__input:focus + &__label &__container
	&__container
		position relative
		margin-bottom 14px
		width 320px
		height 435px
		cursor pointer
		background-color $light-gray
		border 4px solid $vivid-blue
		border-top 0
		border-bottom-right-radius 14px
		border-bottom-left-radius 14px
		transition border-color .3s
		transform translateZ(0)
		backface-visibility hidden
		will-change border-color
		&:before
			position absolute
			z-index 3
			top -39px
			left 10px
			display block
			width 36px
			height 62px
			content ''
			border-left 4px solid $vivid-blue
			border-radius 0 0 0 5px
			transform rotate(45deg) translateZ(0)
			transition border-color .3s
			backface-visibility hidden
			will-change border-color

		&:after
			position absolute
			z-index 2
			top -44px
			right -4px
			display block
			clip rect(auto, auto, auto, 38px)
			width 100%
			height 45px
			content ''
			background-color $light-gray
			border-top 4px solid $vivid-blue
			border-right 4px solid $vivid-blue
			border-radius 0 14px 0 0
			transform translateZ(0)
			transition border-color .3s
			backface-visibility hidden
			will-change border-color

		+below($responsivePhone)
			margin-x auto

		+below($responsivePhoneSmall)
			width 290px

	&__hidden-triangle
		position absolute
		z-index 1
		top -42px
		left -1px
		display block
		size 0
		border-left 42px solid transparent
		border-bottom 42px solid $light-gray

		+below($responsivePhoneSmall)
			top -44px
			left -2px
			border-left-width 42px
			border-bottom-width 45px

	&__info
		position relative
		z-index 3
		top -22px
		padding-right 44px
		padding-left 44px

	&__description-wrapper
		position relative
		margin-bottom 11px
		width 100%
		height 16px
		
	&__description
	&__no-approve
		position absolute
		top 0
		left 0
		font-size 16px
		transform translateZ(0)
		transition opacity .3s
		backface-visibility hidden
		will-change opacity

	&__no-approve
		visibility hidden
		font-size 16px
		color $bright-pink
		opacity 0

	&__description
		visibility visible
		color $dark-gray
		opacity 1

	&__name,
	&__additive
		font-weight 700
		color $black

	&__name
		margin-bottom 3px
		margin-left -2px
		font-size 48px

	&__additive
		margin-bottom 17px
		font-size 24px

	&__portions
	&__present
	&__satisfied
		font-size 14px
		line-height 16px
		color $dark-gray

	&__quantity
		font-weight 700

	&__image-wrapper
		position absolute
		left 0
		bottom 0
		overflow hidden
		width 304px
		height 272px
		border-bottom-right-radius 14px
		border-bottom-left-radius 14px

	&__image
		position absolute
		top 5px
		left -27px

	&__input:focus + &__label &__weight
	&__weight
		position absolute
		right 12px
		bottom 12px
		padding-top 6px
		display flex
		justify-content center
		align-items center
		flex-direction column
		size 80px
		background-color $vivid-blue
		border-radius 50% // Линтер конфликтует с border-radius
		transition background-color .3s // @stylint ignore
		transform translateZ(0)
		backface-visibility hidden // @stylint ignore
		will-change background-color // @stylint ignore

	&__disabled
		display none
		border-bottom-right-radius 14px
		border-bottom-left-radius 14px

	&__number
		font-size 42px
		color $white

	&__measure
		margin-top -3px
		font-size 21px
		line-height 22px
		color $white

	&__action-call
		max-width 320px
		min-height 18px
		text-align center

	&__buy-text
	&__buy-link
	&__consist
	&__no-more
		display none
		font-size 13px
		line-height 16px
		text-shadow 0 1px 0 $black
		color $white

		+below($responsivePhoneSmall)
			font-size 12px
			line-height 14px

	&__input:focus + &__label &
		&__buy-text
		&__buy-link
			display inline-block

	&__buy-text
	&__buy-link
		display inline-block

	&__buy-link
		position relative
		font-weight 700
		text-decoration none
		cursor pointer
		color $vivid-blue
		transform translateZ(0)
		transition color .3s
		backface-visibility hidden
		will-change color

		&:after
			position absolute
			top 14px
			left 0
			width 86%
			content ''
			border-bottom 1px dashed $vivid-blue
			transform translateZ(0)
			transition border-color .3s
			backface-visibility hidden
			will-change border-color

		&:hover
			color $bright-blue

			&:after
				border-bottom-color $bright-blue

	&__no-more
		color $light-yellow

	// Чтобы не писать импортанты, трудноустранямый баг с фокусом при двойном клике при checked
	&_checked-hover > &__input:checked + &__label &__container > &__info &__no-approve
		visibility hidden
		opacity 0

	&_checked-hover > &__input:checked + &__label &__container > &__info &__description
		visibility visible
		opacity 1