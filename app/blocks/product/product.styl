.product
	position relative
	font-family 'Trebuchet'
		
	&__input 
		position absolute
		opacity 0
		z-index -1
		top 0
		left 0
		size 100%

	&__container:hover &
	&__input:focus + &__label &__container:hover &
		border-color $bright-blue

		&:before
			border-top-color $bright-blue

		&__weight
			background-color $bright-blue

	&__container:hover + &__action-call &__buy-link
	&__input:focus + &__label &__container:hover + &__action-call &__buy-link
		color $bright-blue
		border-bottom-color $bright-blue

	&__input:checked:focus + &__label &
	&__input:checked + &__label &
	&__input:checked:focus + &__label &__container:hover &	
		&__container
			border-color $vivid-pink
			
			&:before
				border-top-color $vivid-pink

		&__weight
			background-color $vivid-pink

		&__buy-text
		&__buy-link
		&__no-approve
			display none

		&__consist
		&__description
			display block

	&__input:checked + &__label &__container:hover &
		border-color $bright-pink

		&:before
			border-top-color $bright-pink

		&__weight
			background-color $bright-pink

		&__description
			display none

		&__no-approve
			display block

	&__input[disabled] + &__label &

		&__container
			cursor default
			border-color $gray

			&:before
				z-index 1
				border-top-color $gray

			&:after
				position absolute
				top 0
				left 0
				opacity .5
				size 100%
				content ''
				background-color $light-gray
		
		&__weight
			background-color $gray

		&__description
		&__name
		&__additive
		&__portions
		&__present
			color $gray
			opacity .5
			
		&__buy-text
		&__buy-link
			display none

		&__no-more
			display block

	&__input:focus + &__label &__container
	&__container
		clip-path polygon( // загнутый угол
			13% 0,
			100% 0,
			100% 100%,
			50% 100%,
			0% 100%,
			0% 9%)
		position relative
		padding-top 19px
		margin-bottom 12px
		overflow hidden
		width 320px
		height 480px
		cursor pointer
		background-color $light-gray
		border 4px solid $vivid-blue
		border-top-right-radius 14px
		border-bottom-right-radius 14px
		border-bottom-left-radius 14px
		transition border .3s
		&:before // граница для загнутого угла
			position absolute
			top -6px
			left -4px
			content ''
			border-top 50px solid $vivid-blue
			border-right 49px solid transparent
			transition border .3s
		
		+below($responsivePhone)
			margin-x auto

		+below($responsivePhoneSmall)
			width 290px

	&__info
		padding-left 44px

	&__description-wrapper
		position relative
		width 100%
		height 16px
		margin-bottom 11px

	&__description
	&__no-approve
	&__name
	&__additive
	&__portions
	&__present
		overflow hidden
		text-overflow ellipsis
		white-space nowrap

	&__description
	&__no-approve
		position absolute
		top 0
		left 0

	&__description
		font-size 16px
		color $dark-gray
	
	&__no-approve
		display none
		font-size 16px
		font-weight 400
		color $bright-pink

	&__name,
	&__additive
		font-weight 700
		color $black

	&__name
		margin-left -2px
		margin-bottom 3px
		font-size 48px

	&__additive
		margin-bottom 17px
		font-size 24px

	&__portions
	&__present
		font-size 14px
		line-height 16px
		color $dark-gray

	&__quantity
		font-weight 700

	&__image
		position absolute
		top 205px
		right -27px

	&__input:focus + &__label &__weight
	&__weight
		position absolute
		top	380px
		right 12px
		padding-top 12px
		display flex
		justify-content center
		size 80px
		background-color $vivid-blue
		border-radius 50%
		transition background-color .3s

	&__number
		font-size 42px
		color $white

		&:after
			position absolute
			top 65%
			right 38%
			font-size 21px
			line-height 22px
			content 'кг'

	&__action-call
		max-width 320px
		min-height 18px
		text-align center

	&__buy-text
	&__buy-link
	&__consist
	&__no-more
		display none
		font-size 13px
		font-weight 400
		line-height 16px
		text-shadow 0 1px 0 $black
		color $white

		+below($responsivePhoneSmall)
			font-size 12px
			line-height 14px

	&__input:focus + &__label &
		&__buy-text
		&__buy-link
			display inline-block

	&__buy-text
	&__buy-link
		display inline-block

	&__buy-link
		font-weight 700
		text-decoration none
		cursor pointer
		color $vivid-blue
		border-bottom 1px dashed $vivid-blue
		transition color .3s, border

		&:hover
			color $bright-blue
			border-bottom-color $bright-blue

	&__no-more
		color $light-yellow
