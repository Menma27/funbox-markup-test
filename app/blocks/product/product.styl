.product
	position relative
	font-family 'Trebuchet'
	
	&__input 
		display none

	&__input:checked + &__label &__container
		border-color $vivid-pink

		&:before
			border-top-color $vivid-pink

	&__input:checked + &__label &__weight
		background-color $vivid-pink

	&__input:checked + &__label &__buy-text
	&__input:checked + &__label	&__buy-link
		display none

	&__input:checked + &__label	&
		&__action-call
		&__consist
			display block

	&__input:checked:hover + &__label &__container
		border-color $bright-pink

		&:before
			border-top-color $bright-pink

	&__input:checked:hover + &__label &__weight
		background-color $bright-pink

	&__input:checked:hover + &__label &__description
		display none

	&__input:checked:hover + &__label &__no-approve
		display block

	&__input[disabled] + &__label &

		&__container
			border-color $gray

			&:before
				border-top-color $gray

			&:after
				position absolute
				top 0
				left 0
				opacity .5
				width 100%
				height 100%
				background-color $light-gray
				content ''
		
		&__weight
			background-color $gray

		&__description
		&__name
		&__additive
		&__portions
		&__present
			opacity .5
			color $gray

		&__buy-text
		&__buy-link
			display none

		&__no-more
			display block

	&__container
		clip-path polygon( // загнутый угол
			14% 0,
			100% 0,
			100% 100%,
			50% 100%,
			0% 100%,
			0% 10%)
		position relative
		overflow hidden
		width 320px
		height 480px
		cursor pointer
		background-color $light-gray
		border 4px solid $vivid-blue
		border-top-right-radius 14px
		border-bottom-right-radius 14px
		border-bottom-left-radius 14px
		transition border .3s // TODO check it
		&:before // граница для загнутого угла
			position absolute
			top -3px
			left -3px
			content ''
			border-top 52px solid $vivid-blue
			border-right 49px solid transparent
			transition border .3s

	&__container:hover
		border-color $bright-blue

		&:before
			border-top-color $bright-blue

	&__container:hover &__weight
		background-color $bright-blue

	&__container:hover + &__action-call &__buy-link
		color $bright-blue
		border-bottom-color $bright-blue

	&__info
		padding-top 19px
		padding-left 43px

	&__description
		font-size 16px
		color $dark-gray
	
	&__no-approve
		display none
		font-size 16px
		font-weight 400
		color $bright-pink

	&__name,
	&__additive
		font-weight 700
		color $black

	&__name
		padding-top 11px
		font-size 48px

	&__additive
		padding-top 3px
		font-size 24px

	&__portions
	&__present
		font-size 14px
		line-height 16px
		color $dark-gray

	&__portions
		padding-top 17px

	&__quantity
		font-weight 700

	&__image
		position absolute
		top 204px
		right -26px

	&__weight
		position absolute
		top	379px
		right 13px
		padding-top 5px
		display flex
		justify-content center
		width 81px
		height 81px
		background-color $vivid-blue
		border-radius 50%
		transition background-color .3s

	&__number
		margin-top 8px
		font-size 42px
		color $white

		&:after
			position absolute
			top 65%
			right 38%
			font-size 21px
			line-height 22px
			content 'кг'

	&__action-call
		margin-top 16px
		text-align center

	&__buy-text
	&__buy-link
	&__consist
	&__no-more
		display none
		font-size 13px
		font-weight 400
		line-height 16px
		text-shadow 0 1px 0 $black
		color $white

	&__buy-text
	&__buy-link
		display inline-block

	&__buy-link
		font-weight 700
		text-decoration none
		cursor pointer
		color $vivid-blue
		border-bottom 1px dotted $vivid-blue
		transition color .3s, border

	&__consist
	&__no-more
		display none

	&__no-more
		color $light-yellow
