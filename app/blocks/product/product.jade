mixin product(data)
	- data = data || {};

	+b.product&attributes(attributes)
		+e('input').input(
			type='checkbox'
			name=data.id
			id=data.id
		)

		+e('label').label(
			for=data.id
		)
			+e('div').container
				+e('div').info
					+e('div').description=data.description
					+e('div').no-approve=data.approve
					+e('div').name=data.name
					+e('div').additive=data.addictive
					+e('div').portions=data.portions
					+e('div').present!=data.present.replace(/\n/g, '<br>')

					+e('img').image(
						src=data.image
						title=data.title
						alt=data.title
					)

					+e('div').weight
						+e('span').number=data.weight

			+e('div').action-call
				+e('span').buy-text=data.text
				+e('span').buy-link=data.link
				+e('span').consist=data.consist
				+e('span').no-more=data.ended
