.products
	margin-top 27px
	display flex
	justify-content space-between
	flex-wrap wrap
	width 100%
	max-width 1120px

	&__product-wrapper

		&:first-child
			order 1

		&:nth-child(2)
			order 2
		
		&:last-child
			order 3

	+below($responsiveTabletSmall)
		&__product-wrapper 
			&:first-child
				width 100%
				display flex
				justify-content center
	
	+below($responsivePhoneSmall)
		&__product-wrapper
				width 100%
				display flex
				justify-content center