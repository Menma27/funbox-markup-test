.container
	position relative
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 100%
	height 100vh
	&:before
		position absolute
		size 100%
		content ''
		background-image linear-gradient(to top, rgba(0, 0, 0, .5) 0%, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, .5) 100%) // @stylint ignore

	+below($responsivePhone)
		height 100%